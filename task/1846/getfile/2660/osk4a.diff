+					break;
+
+				case OSK_WIDGET_SHIFT:
+					ToggleBit(_keystate, KEYS_SHIFT);
+					SetWindowDirty(w);
+					break;
+
+				case OSK_WIDGET_SPACE:
+					if (InsertTextBufferChar(&qs->text, ' ')) w->InvalidateWidget(OSK_WIDGET_TEXT);
+					break;
+
+				case OSK_WIDGET_LEFT:
