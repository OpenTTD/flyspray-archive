+void AskShareOrdersCallback(Window *w, bool confirmed)
+{
+	OrdersWindow *ow = static_cast<OrdersWindow *>(w);
+	//if (confirmed) _share_orders = true;
+	if (confirmed) {
+		ow->shareOrders(true);
+	}
